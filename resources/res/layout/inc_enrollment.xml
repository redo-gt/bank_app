<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lay_enrollement"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.b3g.cih.cihpay.widgets.CustomTextView
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enrolement"
        app:custom_font="bold"/>
    <com.b3g.cih.cihpay.widgets.CustomTextView
        android:textSize="@dimen/_12sdp"
        android:textColor="#93a8b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enrolement_description"
        app:custom_font="regular"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"/>
    <com.b3g.cih.cihpay.widgets.CustomButton
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_app_theme"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:text="@string/digitaliser_la_carte"
        android:onClick="onBtnDigitaliserCartesClicked"
        android:textAllCaps="false"
        app:custom_font="semibold"/>
</LinearLayout>
