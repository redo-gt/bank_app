<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/lay_step_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"/>
    <com.b3g.cih.cihpay.widgets.CustomTextView
        android:textSize="@dimen/_16sdp"
        android:textColor="#2b2929"
        android:gravity="center"
        android:id="@+id/txt_result_paiement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion\10réussie"
        app:custom_font="semibold"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"/>
    <ImageView
        android:id="@+id/img_result"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_success"
        android:adjustViewBounds="true"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.b3g.cih.cihpay.widgets.CustomButton
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_home"
        android:background="@drawable/btn_app_theme"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="Retour à l’accueil"
        android:onClick="onRetourButtonClicked"
        android:textAllCaps="false"
        app:custom_font="medium"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>
    <com.b3g.cih.cihpay.widgets.CustomButton
        android:textSize="@dimen/_12sdp"
        android:textColor="#0074e4"
        android:gravity="center"
        android:id="@+id/btn_show_recu"
        android:background="@drawable/btn_transparent_theme"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="@string/afficher_les_details"
        android:onClick="onRecuButtonClicked"
        android:textAllCaps="false"
        app:custom_font="medium"/>
    <com.b3g.cih.cihpay.widgets.CustomButton
        android:textSize="@dimen/_12sdp"
        android:textColor="#0074e4"
        android:gravity="center"
        android:id="@+id/btn_retry"
        android:background="@drawable/btn_transparent_theme"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="@string/r_essayer"
        android:onClick="onRetryButtonClicked"
        android:textAllCaps="false"
        app:custom_font="medium"/>
</LinearLayout>
