<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_recu"
    android:background="@color/blue_bg_f"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onHideRecuButtonClicked">
    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.b3g.cih.cihpay.widgets.CustomTextView
                android:textSize="@dimen/_16sdp"
                android:textColor="#272f3b"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/d_tails_de_la_transaction"
                app:custom_font="bold"/>
            <View
                android:background="#dedede"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:id="@+id/txt_operation_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00/00/00"
                        app:custom_font="regular"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#66000000"
                        android:id="@+id/txt_operation_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="--- --- ---"
                        app:custom_font="regular"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#66000000"
                        android:id="@+id/txt_operation_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="--- --- ---"
                        app:custom_font="regular"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#66000000"
                        android:id="@+id/txt_operation_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="--- --- ---"
                        app:custom_font="regular"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#66000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NUM TRANSACTION:"
                        app:custom_font="regular"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#66000000"
                        android:id="@+id/txt_operation_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="--- --- ---"
                        app:custom_font="regular"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"/>
                <View
                    android:background="#dedede"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/montant"
                        android:textAllCaps="true"
                        app:custom_font="regular"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <com.b3g.cih.cihpay.widgets.CustomTextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:id="@+id/txt_operation_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="--.-- #"
                        app:custom_font="regular"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"/>
            <com.b3g.cih.cihpay.widgets.CustomButton
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/btn_app_theme"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="OK"
                android:onClick="onHideRecuButtonClicked"
                android:textAllCaps="false"
                app:custom_font="medium"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
