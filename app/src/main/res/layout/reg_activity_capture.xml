<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cameraPreviewHolder"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/cameraUi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <SurfaceView
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/torchStatusRightLl"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/batteryRightIv"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:src="0x7f08006c"
                android:scaleType="centerInside"
                android:tint="@android:color/white"
                android:rotation="90"
                android:layout_marginEnd="2dp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bleStateRightIv"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/authenticator_1120"
                android:scaleType="centerInside"
                android:tint="@android:color/white"
                android:rotation="90"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/torchStatusLeftLl"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bleStateLeftIv"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/authenticator_1120"
                android:scaleType="centerInside"
                android:tint="@android:color/white"
                android:rotation="-90"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/batteryLeftIv"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:src="0x7f08006c"
                android:scaleType="centerInside"
                android:tint="@android:color/white"
                android:rotation="-90"
                android:layout_marginStart="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/torchStatusLl"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/batteryIv"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:src="0x7f08006c"
                android:scaleType="centerInside"
                android:tint="@android:color/white"
                android:layout_marginEnd="2dp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bleStateIv"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/authenticator_1120"
                android:scaleType="centerInside"
                android:tint="@android:color/white"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <View
                android:id="@+id/anchorLeft"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <ImageButton
                android:id="@+id/lightBtn"
                android:background="@android:color/transparent"
                android:padding="@dimen/reg_small_img_button_padding"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f08024a"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/anchorLeft"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/strAccessibilityTorchButton"
                android:layout_toEndOf="@+id/anchorLeft"/>
            <ImageButton
                android:id="@+id/swapCameraBtn"
                android:background="@android:color/transparent"
                android:padding="@dimen/reg_small_img_button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f08023f"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/lightBtn"
                android:layout_toEndOf="@+id/lightBtn"/>
            <ImageButton
                android:id="@+id/captureBtn"
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080241"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/strAccessibilityCameraButton"/>
            <View
                android:id="@+id/anchorRight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
            <ImageButton
                android:id="@+id/exitBtn"
                android:background="@android:color/transparent"
                android:padding="@dimen/reg_small_img_button_padding"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080244"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/anchorRight"
                android:contentDescription="@string/strAccessibilityCloseButton"
                android:layout_toStartOf="@+id/anchorRight"/>
            <ImageButton
                android:id="@+id/changeFrameBtn"
                android:background="@android:color/transparent"
                android:padding="@dimen/reg_small_img_button_padding"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080248"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/exitBtn"
                android:layout_toStartOf="@+id/exitBtn"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/topTextViewGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <TextView
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:id="@+id/mainStatusPortTv"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <com.regula.documentreader.api.utils.DrawRectangleView
            android:id="@+id/overlayFrameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonsLayout"
            android:layout_below="@+id/topTextViewGroup"/>
        <RelativeLayout
            android:id="@+id/rightTextViewGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/reg_info_text_top_margin"
            android:layout_above="@+id/buttonsLayout"
            android:layout_below="@+id/topTextViewGroup"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/reg_info_text_top_margin"
            android:layout_alignParentEnd="true">
            <com.regula.documentreader.api.utils.VerticalTextView
                android:textColor="@android:color/white"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/mainStatusCounterTv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/leftTextViewGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/reg_info_text_top_margin"
            android:layout_above="@+id/buttonsLayout"
            android:layout_below="@+id/topTextViewGroup"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/reg_info_text_top_margin"
            android:layout_alignParentStart="true">
            <com.regula.documentreader.api.utils.VerticalTextView
                android:textColor="@android:color/white"
                android:gravity="top|center_horizontal"
                android:id="@+id/mainStatusClockTv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:id="@+id/floatingStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="top|center_horizontal"
            android:id="@+id/floatingStatusLandscapeClockTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/floatingStatusLandscapeCounterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:id="@+id/metadataTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="top|center_horizontal"
            android:id="@+id/metadataLandscapeClockTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/metadataLandscapeCounterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:id="@+id/floatingCurrentStatusPortTv"
            android:background="@drawable/reg_rounded_purple_rect"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/floatingCurrentStatusCounterTv"
            android:background="@drawable/reg_rounded_purple_rect"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="top|center_horizontal"
            android:id="@+id/floatingCurrentStatusClockTv"
            android:background="@drawable/reg_rounded_purple_rect"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="top|center_horizontal"
            android:id="@+id/customLabelLandscapeRightTv"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/customLabelLandscapeLeftTv"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rightTextViewGroup"
            android:layout_toRightOf="@+id/leftTextViewGroup"
            android:layout_above="@+id/buttonsLayout"
            android:layout_below="@+id/topTextViewGroup"
            android:layout_toStartOf="@+id/rightTextViewGroup"
            android:layout_toEndOf="@+id/leftTextViewGroup">
            <View
                android:id="@+id/frameView"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/flipInAnimation"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080242"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:alpha="0"/>
            <ImageView
                android:id="@+id/flipOutAnimation"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080243"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/assistAnimationIv"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080243"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/landHoloAnimationIv"
                android:paddingRight="25dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080255"
                android:scaleType="centerInside"
                android:tint="@android:color/white"
                android:layout_centerInParent="true"
                android:paddingEnd="25dp"/>
        </RelativeLayout>
        <com.regula.documentreader.api.utils.DrawRectangleView
            android:id="@+id/overlayFocusView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonsLayout"/>
        <ImageButton
            android:id="@+id/skipPageBtn"
            android:background="@drawable/reg_rounded_purple_rect"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="@dimen/reg_img_button_size"
            android:layout_marginBottom="@dimen/reg_img_button_size"
            android:src="0x7f080257"
            android:scaleType="centerInside"
            android:layout_above="@+id/buttonsLayout"
            android:layout_centerHorizontal="true"
            android:rotationX="@integer/locale_mirror_flip"
            android:rotationY="@integer/locale_mirror_flip"/>
        <ProgressBar
            android:id="@+id/loadingPb"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:id="@+id/currentStatusPortTv"
            android:background="@drawable/reg_rounded_purple_rect"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_info_text_top_margin"
            android:layout_below="@+id/topTextViewGroup"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:id="@+id/customLabelTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/currentStatusCounterTv"
            android:background="@drawable/reg_rounded_purple_rect"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/reg_info_text_top_margin"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/reg_info_text_top_margin"
            android:layout_alignParentStart="true"/>
        <com.regula.documentreader.api.utils.VerticalTextView
            android:textColor="@android:color/white"
            android:gravity="top|center_horizontal"
            android:id="@+id/currentStatusClockTv"
            android:background="@drawable/reg_rounded_purple_rect"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/reg_info_text_top_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/reg_info_text_top_margin"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/holoGuideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.12"/>
    <ImageView
        android:id="@+id/portHoloAnimationIv"
        android:paddingRight="25dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="0x7f080255"
        android:scaleType="centerInside"
        android:tint="@android:color/white"
        android:paddingEnd="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/holoGuideline"/>
</androidx.constraintlayout.widget.ConstraintLayout>
